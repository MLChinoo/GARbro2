<Window x:Class="GARbro.GUI.EnterMaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gre="clr-namespace:GameRes.Extensions;assembly=GameRes"
        xmlns:ctl="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Title="{gre:Localize TextSelectFiles}" SizeToContent="WidthAndHeight" ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10">
        <TextBlock Text="{gre:Localize LabelEnterMask}"/>
        <ComboBox Loaded="Mask_Loaded" Name="Mask" IsEditable="True"/>
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Width="75" Height="25" Content="{gre:Localize ButtonOK}" IsDefault="True" Margin="0,0,10,0" Click="Button_Click"/>
            <Button Width="75" Height="25" Content="{gre:Localize ButtonCancel}" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>
